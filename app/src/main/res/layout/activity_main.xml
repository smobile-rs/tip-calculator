<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tip_amount_title_text_view"
      style="@style/TipCalculatorTextViewValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_large"
      android:text="@string/tip"
      app:layout_constraintEnd_toStartOf="@id/values_guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tip_text_input_layout" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tip_amount_text_view"
      style="@style/TipCalculatorTextViewValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_large"
      android:text="@{tip}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/values_guideline"
      app:layout_constraintTop_toBottomOf="@id/tip_text_input_layout"
      tools:text="$3" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/total_amount_title_text_view"
      style="@style/TipCalculatorTextViewValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_large"
      android:text="@string/total"
      app:layout_constraintEnd_toStartOf="@id/values_guideline"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tip_amount_title_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/total_amount_text_view"
      style="@style/TipCalculatorTextViewValue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_large"
      android:text="@{total}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/values_guideline"
      app:layout_constraintTop_toBottomOf="@id/tip_amount_text_view"
      tools:text="$23" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/values_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.4" />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/tip_text_input_layout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:hint="@string/tip_percentage"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/bill_text_input_layout">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tip_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_medium" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/bill_text_input_layout"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/bill"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bill_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_medium" />

    </com.google.android.material.textfield.TextInputLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <data>

    <variable
      name="tip"
      type="String" />

    <variable
      name="total"
      type="String" />
  </data>

</layout>